@model Application.Poa.ViewModels.ProgramaEstrategicoViewModel

@{
    ViewBag.Title = "Programas Estrategicos";
}

<div class="light-box-form">
    
    <form method="POST" action="/ProgramasEstrategicos/Edit/@Model.Id">

        <div class="form-group">
            <label>Nombre:</label>
            <input type="text" name="Nombre" class="form-control" value="@Model.Nombre"/>
        </div>

        <div class="form-group">
            <label>Descripción:</label>
            <textarea name="Descripcion" class="form-control">@Model.Descripcion</textarea>
        </div>

        <div class="checkbox">
            <label>
                <input type="checkbox" name="Activo" @(Model.Estado == "Activo") ? "checked" : "">Activo
            </label>
        </div>

        <input type="submit" class="btn btn-primary" value="Guardar">   
        <button class="btn btn-danger">Cerrar</button>
    </form>

</div>
