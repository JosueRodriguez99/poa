@model Application.Poa.ViewModels.ProgramaEstrategicoViewModel

@{
    ViewBag.Title = "Programas Estrategicos";
}

<div class="light-box-form">
    
    <form method="POST" action="/ProgramasEstrategicos/Edit/@Model.Id">
        <fieldset>

            <legend>Programa estratégico</legend>

            <div class="form-group">
                @Html.Label("Nombre:")
                <input type="text" name="Nombre" class="form-control" value="@Model.Nombre"/>
                @Html.ValidationMessage("Nombre")
            </div>

            <div class="form-group">
                @Html.Label("Descripción:")
                <textarea name="Descripcion" class="form-control">@Model.Descripcion</textarea>
                @Html.ValidationMessage("Descripcion")
            </div>

            <div class="checkbox">
                <label>
                    <input type="checkbox" name="Activo" value="true" @(Model.Estado == "Activo") checked>Activo
                </label>
            </div>

            <input type="submit" class="btn btn-primary" value="Guardar">   
            <input type="button" class="btn btn-danger" value="Cerrar" onclick=" location.href='/ProgramasEstrategicos/Index'"/> 

        </fieldset>
    </form>

</div>
