<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>SIP - @ViewBag.Title</title>
    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- contenedor principal -->
    <div id="wrapper">
        <!-- panel lateral -->
        <div id="sidebar-wrapper">
            <ul class="sidebar-nav">
                <li class="sidebar-brand"><a href="#">crgarcia</a></li>
                <li>@Html.ActionLink("Programas Estrategicos", "Index", "ProgramasEstrategicos")</li>
                <li>@Html.ActionLink("Productos", "Index", "Productos")</li>
                <li>@Html.ActionLink("Usuarios", "Index", "Usuarios")</li>
                <li>@Html.ActionLink("Dependencias", "Index", "Dependencias")</li>
                <li><a href="#">Cerrar Sesión</a></li>
            </ul>
        </div>
        <!-- fin panel lateral -->
        <!-- contenido -->
        <div id="page-content-wrapper">
            <button type="button" class="btn btn-default" id="menu-toggle">
                <span class="glyphicon glyphicon-resize-horizontal"></span>
            </button>
            <h1>@ViewBag.Title</h1>
            <!-- contenido que cambia -->
            @RenderBody()
            <!-- cierre de contenido que cambia -->
        </div>
        <!-- cierre del contenido -->
    </div>
    <!-- cierre del contenedor principal -->
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/app.js"></script>
</body>
</html>