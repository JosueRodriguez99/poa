@model List<Application.Institucion.ViewModels.UsuarioViewModel>

@{
    ViewBag.Title = "Usuarios";
}

<table class="table table-hover table-bordered">
    
    <thead>
        <tr><th>Usuario</th><th>Rol del usuario</th><th>Estado</th><th>Acción</th></tr>
    </thead>

    <tbody>
        @foreach(var usuario in Model)
        {
            <tr>
                <td>@usuario.NombreUsuario</td>
                <td>@usuario.RolUsuario</td>
                <td>@usuario.Estado</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { usuario.Id })/
                    @Html.ActionLink("Eliminar", "Delete", new { usuario.Id })
                </td>
            </tr>    
        }    
    </tbody>

</table>

<!-- Botones de control -->
<div class="row">
    <div class="col-sm-12">
        
        <a href="~/Usuarios/Create">
            <button type="button" class="btn btn-default">Agregar</button>
        </a>

        <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
                <button type="button" class="btn btn-default">Anterior</button>
                <button type="button" class="btn btn-default">Siguiente</button>
            </div>
        </div>

    </div>
</div>