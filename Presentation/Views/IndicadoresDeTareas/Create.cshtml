@model List<Application.Poa.ViewModels.TareaViewModel>

@{
    ViewBag.Title = "IndicadorDeTarea";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="light-box-form">
    
    @using (Html.BeginForm("Create", "IndicadoresDeTareas")){
        <fieldset>
            <legend>Indicador de tarea</legend>

            <div class="form-group">
                @Html.Label("Tarea:")
                <select class="form-control" name="TareaId">
                    <!--foreach (var tarea in Model)
                    {
                        <option value="tarea.Id">tarea.Descripcion</option>
                    }-->

                </select>
            </div>

            <div class="form-group">
                @Html.Label("Descripción:")
                <input name="Descripcion" type="text" class="form-control"/>
            </div>

            <div class="form-group">
                @Html.Label("Unidad de medida:")
                <select class="form-control" name="UnidadDeMedidaId">
                    <option value="1">Porcentaje</option>
                    <option value="2">Monto</option>
                    <option value="3">Número</option>
                </select>
            </div>

            <div class="form-group">
                
                <table class="table table-hover table-bordered">
                    <thead>
                    @Html.Label("Programación Mensual")
                    </thead>
                    <tbody>
                    <tr>
                        <th>1</th>
                        <th>2</th>
                        <th>3</th>
                        <th>4</th>
                        <th>5</th>
                        <th>6</th>
                        <th>7</th>
                        <th>8</th>
                        <th>9</th>
                        <th>10</th>
                        <th>11</th>
                        <th>12</th>
                    </tr>
                    <tr>
                        <td><textarea name="Enero" class="form-control"></textarea></td>
                        <td><textarea name="Febrero" class="form-control"></textarea></td>
                        <td><textarea name="Marzo" class="form-control"></textarea></td>
                        <td><textarea name="Abril" class="form-control"></textarea></td>
                        <td><textarea name="Mayo" class="form-control"></textarea></td>
                        <td><textarea name="Junio" class="form-control"></textarea></td>
                        <td><textarea name="Julio" class="form-control"></textarea></td>
                        <td><textarea name="Agosto" class="form-control"></textarea></td>
                        <td><textarea name="Septiembre" class="form-control"></textarea></td>
                        <td><textarea name="Octubre" class="form-control"></textarea></td>
                        <td><textarea name="Noviembre" class="form-control"></textarea></td>
                        <td><textarea name="Diciembre" class="form-control"></textarea></td>
                    </tr>

                    </tbody>
                </table>
            </div>

            <div class="form-group">
                @Html.Label("Medio de verificación:")
                <input name="Medio de verificación" type="text" class="form-control"/>
            </div>
   
            <div class="form-group">
                @Html.Label("Indicador de actividad al que suma:")
                <select class="form-control" name="ActividadId">

                </select>
            </div>
        
            <input type="submit" class="btn btn-primary" value="Guardar">   
            <input type="button" class="btn btn-danger" value="Cerrar" onclick="location.href = '/Poas/Create'"/>
    </fieldset>  
    }
</div>
