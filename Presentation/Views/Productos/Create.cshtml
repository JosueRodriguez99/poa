@model List<Application.Poa.ViewModels.ProgramaEstrategicoViewModel>

@{
    ViewBag.Title = "Productos";
}

<div class="light-box-form">
    
    @using (Html.BeginForm("Create", "Productos")){
        <fieldset>

            <legend>Producto</legend>
        
            <div class="form-group">
                @Html.Label("Código:")
                <input name="Codigo" type="text" class="form-control"/>
                @Html.ValidationMessage("Codigo")
            </div>

            <div class="form-group">
                @Html.Label("Descripción:")
                <textarea cols="40" rows="5" name="Descripcion" class="form-control"></textarea>
                @Html.ValidationMessage("Descripcion")
            </div>

            <div class="form-group">
                @Html.Label("Programa estratégico:")
                <select class="form-control" name="ProgramaEstrategicoId">
                    @foreach (var programaEstrategico in Model)
                    {
                        <option value="@programaEstrategico.Id">@programaEstrategico.Nombre</option>
                    }
                </select>
                @Html.ValidationMessage("ProgramaEstrategicoId")
            </div>
            

            @Html.CheckBox("Activo")
            <b>
                @Html.Label("Activo")<br/>
            </b>

            <input type="submit" class="btn btn-primary" value="Guardar">   
            <input type="button" class="btn btn-danger" value="Cerrar" onclick="location.href='Index'"/>
        </fieldset>  
    }

</div>
