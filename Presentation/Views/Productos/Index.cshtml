@model Presentation.Models.Poa.IndexProductoPageView

@{
    ViewBag.Title = "Productos";
    var productos = Model.ProductoViewModels;
}

<table class="table table-hover table-bordered">
    <thead>
        <tr><th>Código</th><th>Descripción</th><th>Programa Estrategico</th><th>Estado</th><th>Acción</th></tr>
    </thead>
    <tbody>
        @foreach (var producto in productos)
        {
            <tr>
                <td>@producto.Codigo</td>
                <td>@producto.Descripcion</td>
                <td>@producto.ProgramaEstrategico</td>
                <td>@producto.Estado</td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { producto.Id })/
                    @Html.ActionLink("Eliminar", "Delete", new { producto.Id })
                </td>
            </tr>   
        }    
    </tbody>
</table>
<!-- Botones de control -->
<div class="row">
    <div class="col-sm-12">
        <a href="~/Productos/Create">
            <button type="button" class="btn btn-default">Agregar</button>
        </a>
        <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group">
                <button type="button" class="btn btn-default">Anterior</button>
                <button type="button" class="btn btn-default">Siguiente</button>
            </div>
        </div>
    </div>
</div>